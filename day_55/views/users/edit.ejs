<h1>Sửa người dùng</h1>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Tên</label>
    <input
      type="text"
      name="name"
      class="form-control"
      placeholder="Tên..."
      value="<%= user[0].name %>"
    />
    <%- req.errors?.name ? `<span class="text-danger">${req.errors?.name}</span
    >`: '' %>
  </div>
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      class="form-control"
      placeholder="Email..."
      value="<%= user[0].email %>"
    />
    <%- req.errors?.email ? `<span class="text-danger"
      >${req.errors?.email}</span
    >`: '' %>
  </div>
  <div class="mb-3">
    <label for="">Trạng thái</label>
    <select name="status" class="form-select">
      <option value="0" <%= !user[0].status ? 'selected': '' %>>Chưa kích hoạt</option>
      <option value="1" <%= user[0].status ? 'selected': '' %>>Kích hoạt</option>
    </select>
  </div>
  <button class="btn btn-primary">Lưu</button>
  <a href="/users" class="btn btn-danger">Hủy</a>
</form>
