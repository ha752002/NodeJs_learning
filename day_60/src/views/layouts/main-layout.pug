block variables
    html
        head
            meta(charset="utf-8")
            link(rel="shortcut icon", href="/favicon.ico")
            link(
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css",
                rel="stylesheet",
                integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC",
                crossorigin="anonymous"
            )
            meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
            meta(name="theme-color", content="#000000")
            title #{title}
        body
            .navbar.navbar-expand-lg.navbar-light.bg-light
                .container-fluid
                    a.navbar-brand(href='/') Ha's Home
                    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0.d-flex.justify-content-between.w-100
                            div.d-flex
                                li.nav-item
                                    a.nav-link.active(aria-current='page', href='/') Home
                                if !userLogged
                                    li.nav-item
                                        a.nav-link(href='/auth/login') Login
                                    li.nav-item
                                        a.nav-link(href='/auth/register') Register
                            if userLogged !== undefined && userLogged !== null
                                div.d-flex
                                    if (userLogged !== undefined && userLogged !== null && userLogged.role === "ADMIN")
                                        li.nav-item
                                            a.text-info.nav-link(href='/admin') Admin
                                    li.nav-item
                                        a.text-info.nav-link(href='/user') User Information
                                    li.nav-item
                                        form(action="/auth/logout", method="POST")
                                            button.btn.btn-danger(type="submit") Logout
            div#root
            block content
            script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
